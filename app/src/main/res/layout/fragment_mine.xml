<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:wave="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/MatchMatch.Vertical"
        android:background="@color/main_bg">


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeLayout"
            style="@style/MatchWrap">


            <ScrollView
                style="@style/MatchMatch"
                android:scrollbars="none">

                <LinearLayout
                    style="@style/MatchWrap.Vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@mipmap/mine_bac_new">

                        <LinearLayout
                            android:id="@+id/mine_login"
                            style="@style/WrapWrap.Horizontal"
                            android:layout_centerVertical="true"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/iv_head"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="30dp"
                                android:src="@mipmap/mine_ico"
                                tools:ignore="ContentDescription"/>

                            <TextView
                                android:id="@+id/tv_name"
                                style="@style/WrapWrap"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                tools:text="13101205180"/>
                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_alignParentBottom="true">

                            <com.pingxun.ui.view.WaveViewBySinCos
                                android:id="@+id/wave_sin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                wave:waveAmplitude="4dp"
                                wave:waveColor="#50ffffff"
                                wave:waveFillType="bottom"
                                wave:waveSpeed="1.5"
                                wave:waveStart="true"
                                wave:waveStartPeriod="1"
                                wave:waveType="sin" />

                            <com.pingxun.ui.view.WaveViewBySinCos
                                android:id="@+id/wave_sin2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                wave:waveAmplitude="6dp"
                                wave:waveColor="@color/white"
                                wave:waveFillType="bottom"
                                wave:waveSpeed="1.5"
                                wave:waveStart="true"
                                wave:waveStartPeriod="1"
                                wave:waveType="sin" />

                        </FrameLayout>

                    </RelativeLayout>




                    <!--申请记录 -->
                    <RelativeLayout
                        android:id="@+id/mine_apply"
                        style="@style/WrapWrap"
                        android:background="@drawable/ripple_bg"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:background="@mipmap/icon_apply"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/tv_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/iv1"
                            android:gravity="center"
                            android:text="@string/apply_record"
                            android:textSize="16sp"
                            android:typeface="serif"
                            tools:ignore="RelativeOverlap"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="20dp"
                            android:background="@mipmap/icon_arrow"
                            tools:ignore="ContentDescription"/>

                    </RelativeLayout>

                    <include layout="@layout/line_vertical_1dp"/>

                    <!--关于我们 -->
                    <RelativeLayout
                        android:id="@+id/mine_about_us"
                        style="@style/WrapWrap"
                        android:background="@drawable/ripple_bg"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:background="@mipmap/icon_about_us"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/iv2"
                            android:gravity="center"
                            android:text="@string/about_us"
                            android:textSize="16sp"
                            android:typeface="serif"
                            tools:ignore="RelativeOverlap"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="20dp"
                            android:background="@mipmap/icon_arrow"
                            tools:ignore="ContentDescription"/>

                    </RelativeLayout>


                    <!--联系客服-->
                    <RelativeLayout
                        android:id="@+id/mine_contact_us"
                        style="@style/WrapWrap"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ripple_bg"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:background="@mipmap/icon_contact_us"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/iv4"
                            android:gravity="center"
                            android:text="@string/contact_us"
                            android:textSize="16sp"
                            android:typeface="serif"
                            tools:ignore="RelativeOverlap"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="20dp"
                            android:background="@mipmap/icon_arrow"
                            tools:ignore="ContentDescription"/>

                    </RelativeLayout>

                    <include layout="@layout/line_vertical_1dp"/>

                    <!--版本号-->
                    <RelativeLayout
                        android:id="@+id/mine_version"
                        style="@style/MatchWrap"
                        android:background="@color/white"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:background="@mipmap/icon_version"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/tv_version"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/iv5"
                            android:gravity="center"
                            android:text="@string/version_num"
                            android:textSize="16sp"
                            android:typeface="serif"/>


                    </RelativeLayout>


                    <!--退出登录-->
                    <TextView
                        android:id="@+id/btn_quit"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/shap_quit_login"
                        android:gravity="center"
                        android:text="@string/quit_login"
                        android:textColor="#333"
                        android:textSize="20sp"
                        android:typeface="serif"
                        android:visibility="gone"
                        tools:visibility="visible"/>


                </LinearLayout>
            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>